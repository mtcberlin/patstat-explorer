# Environment Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit the .env file with real credentials!

# App Settings
APP_ENV=development          # development, staging, production
DEBUG=true                   # Set to false in production

# Database Connection (PATSTAT PostgreSQL - read-only)
DATABASE_URL=postgresql://user:password@host:5432/patstat

# Database Connection (Neon - app database for user data, sessions, etc.)
NEON_DATABASE_URL=postgresql://user:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require
NEON_API_KEY=napi_...                # For branch management via GitHub workflow

# Streamlit Settings
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=true

# API Keys (add as needed)
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# Authentication (if needed for deployment)
# AUTH_USERNAME=admin
# AUTH_PASSWORD=secure-password
